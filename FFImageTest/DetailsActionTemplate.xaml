<?xml version="1.0" encoding="UTF-8"?>
<lv:BaseDetailsRowViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lv="clr-namespace:FFImageTest.Client.Lib.Controls.ListView"
             x:Class="FFImageTest.Client.Lib.Controls.ListView.DetailsActionTemplate" 
             x:Name="root">
    <ViewCell.View>
        <Grid RowDefinitions="Auto, Auto, Auto">
            <BoxView Grid.Row="0"/>
            <Grid Grid.Row="1" ColumnDefinitions="4*,6*" Margin="0, 3, 0, 3">
                <Label Grid.Column="0" VerticalTextAlignment="Start" Text="{Binding Name}" FontAttributes="Bold" />
                <Grid Grid.Column="1" ColumnDefinitions="*, Auto">
                    <ContentView Grid.Column="0" Content="{Binding DisplayItem}"/>
                    <ImageButton 
                        Grid.Column="1" 
                        CommandParameter="{Binding Action}" 
                        Clicked="ShortcutButton_Clicked" 
                        />

                </Grid>
            </Grid>
            <BoxView Grid.Row="2"/>
        </Grid>
    </ViewCell.View>
</lv:BaseDetailsRowViewCell>