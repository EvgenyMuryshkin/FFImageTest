<?xml version="1.0" encoding="UTF-8"?>
<lv:BaseDetailsRowViewCell xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lv="clr-namespace:FFImageTest.Client.Lib.Controls.ListView"          
             x:Class="FFImageTest.Client.Lib.Controls.ListView.CustomTemplate" 
             x:Name="root">
    <ViewCell.View>
        <StackLayout>
            <StackLayout.Margin>
                <OnIdiom x:TypeArguments="Thickness" Phone="0,0,0,0" Tablet="10,0,10,0"/>
            </StackLayout.Margin>

            <ContentView Content="{Binding DisplayItem}"/>
        </StackLayout>
    </ViewCell.View>
</lv:BaseDetailsRowViewCell>